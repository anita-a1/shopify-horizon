{% doc %}
  @prompt
    metafield product that i have
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-metafield-display-{{ ai_gen_id }} {
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-metafield-display__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.spacing }}px 0;
    font-weight: 700;
  }

  .ai-metafield-display__list-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.spacing }}px;
  }

  .ai-metafield-display__item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-metafield-display__label-{{ ai_gen_id }} {
    color: {{ block.settings.label_color }};
    font-size: {{ block.settings.label_size }}px;
    font-weight: 600;
    margin: 0;
  }

  .ai-metafield-display__value-{{ ai_gen_id }} {
    color: {{ block.settings.value_color }};
    font-size: {{ block.settings.value_size }}px;
    margin: 0;
    line-height: 1.6;
  }

  .ai-metafield-display__value-{{ ai_gen_id }} img {
    max-width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-metafield-display__divider-{{ ai_gen_id }} {
    height: 1px;
    background-color: {{ block.settings.divider_color }};
    margin: {{ block.settings.spacing }}px 0;
  }

  .ai-metafield-display__empty-{{ ai_gen_id }} {
    color: {{ block.settings.value_color }};
    font-size: {{ block.settings.value_size }}px;
    opacity: 0.6;
    font-style: italic;
  }

  @media screen and (max-width: 749px) {
    .ai-metafield-display-{{ ai_gen_id }} {
      padding: {{ block.settings.padding | times: 0.75 }}px;
    }

    .ai-metafield-display__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.85 }}px;
    }
  }
{% endstyle %}

<div class="ai-metafield-display-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h3 class="ai-metafield-display__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h3>
  {% endif %}

  <ul class="ai-metafield-display__list-{{ ai_gen_id }}">
    {% if block.settings.metafield_1_namespace != blank and block.settings.metafield_1_key != blank %}
      {% assign metafield_1 = product.metafields[block.settings.metafield_1_namespace][block.settings.metafield_1_key] %}
      {% if metafield_1 != blank %}
        <li class="ai-metafield-display__item-{{ ai_gen_id }}">
          {% if block.settings.metafield_1_label != blank %}
            <div class="ai-metafield-display__label-{{ ai_gen_id }}">{{ block.settings.metafield_1_label }}</div>
          {% endif %}
          <div class="ai-metafield-display__value-{{ ai_gen_id }}">
            {% if metafield_1.type == 'file_reference' %}
              <img src="{{ metafield_1 | image_url: width: 800 }}" alt="{{ metafield_1.alt }}" loading="lazy">
            {% else %}
              {{ metafield_1.value }}
            {% endif %}
          </div>
        </li>
        {% if block.settings.show_dividers and block.settings.metafield_2_namespace != blank %}
          <div class="ai-metafield-display__divider-{{ ai_gen_id }}"></div>
        {% endif %}
      {% endif %}
    {% endif %}

    {% if block.settings.metafield_2_namespace != blank and block.settings.metafield_2_key != blank %}
      {% assign metafield_2 = product.metafields[block.settings.metafield_2_namespace][block.settings.metafield_2_key] %}
      {% if metafield_2 != blank %}
        <li class="ai-metafield-display__item-{{ ai_gen_id }}">
          {% if block.settings.metafield_2_label != blank %}
            <div class="ai-metafield-display__label-{{ ai_gen_id }}">{{ block.settings.metafield_2_label }}</div>
          {% endif %}
          <div class="ai-metafield-display__value-{{ ai_gen_id }}">
            {% if metafield_2.type == 'file_reference' %}
              <img src="{{ metafield_2 | image_url: width: 800 }}" alt="{{ metafield_2.alt }}" loading="lazy">
            {% else %}
              {{ metafield_2.value }}
            {% endif %}
          </div>
        </li>
        {% if block.settings.show_dividers and block.settings.metafield_3_namespace != blank %}
          <div class="ai-metafield-display__divider-{{ ai_gen_id }}"></div>
        {% endif %}
      {% endif %}
    {% endif %}

    {% if block.settings.metafield_3_namespace != blank and block.settings.metafield_3_key != blank %}
      {% assign metafield_3 = product.metafields[block.settings.metafield_3_namespace][block.settings.metafield_3_key] %}
      {% if metafield_3 != blank %}
        <li class="ai-metafield-display__item-{{ ai_gen_id }}">
          {% if block.settings.metafield_3_label != blank %}
            <div class="ai-metafield-display__label-{{ ai_gen_id }}">{{ block.settings.metafield_3_label }}</div>
          {% endif %}
          <div class="ai-metafield-display__value-{{ ai_gen_id }}">
            {% if metafield_3.type == 'file_reference' %}
              <img src="{{ metafield_3 | image_url: width: 800 }}" alt="{{ metafield_3.alt }}" loading="lazy">
            {% else %}
              {{ metafield_3.value }}
            {% endif %}
          </div>
        </li>
        {% if block.settings.show_dividers and block.settings.metafield_4_namespace != blank %}
          <div class="ai-metafield-display__divider-{{ ai_gen_id }}"></div>
        {% endif %}
      {% endif %}
    {% endif %}

    {% if block.settings.metafield_4_namespace != blank and block.settings.metafield_4_key != blank %}
      {% assign metafield_4 = product.metafields[block.settings.metafield_4_namespace][block.settings.metafield_4_key] %}
      {% if metafield_4 != blank %}
        <li class="ai-metafield-display__item-{{ ai_gen_id }}">
          {% if block.settings.metafield_4_label != blank %}
            <div class="ai-metafield-display__label-{{ ai_gen_id }}">{{ block.settings.metafield_4_label }}</div>
          {% endif %}
          <div class="ai-metafield-display__value-{{ ai_gen_id }}">
            {% if metafield_4.type == 'file_reference' %}
              <img src="{{ metafield_4 | image_url: width: 800 }}" alt="{{ metafield_4.alt }}" loading="lazy">
            {% else %}
              {{ metafield_4.value }}
            {% endif %}
          </div>
        </li>
        {% if block.settings.show_dividers and block.settings.metafield_5_namespace != blank %}
          <div class="ai-metafield-display__divider-{{ ai_gen_id }}"></div>
        {% endif %}
      {% endif %}
    {% endif %}

    {% if block.settings.metafield_5_namespace != blank and block.settings.metafield_5_key != blank %}
      {% assign metafield_5 = product.metafields[block.settings.metafield_5_namespace][block.settings.metafield_5_key] %}
      {% if metafield_5 != blank %}
        <li class="ai-metafield-display__item-{{ ai_gen_id }}">
          {% if block.settings.metafield_5_label != blank %}
            <div class="ai-metafield-display__label-{{ ai_gen_id }}">{{ block.settings.metafield_5_label }}</div>
          {% endif %}
          <div class="ai-metafield-display__value-{{ ai_gen_id }}">
            {% if metafield_5.type == 'file_reference' %}
              <img src="{{ metafield_5 | image_url: width: 800 }}" alt="{{ metafield_5.alt }}" loading="lazy">
            {% else %}
              {{ metafield_5.value }}
            {% endif %}
          </div>
        </li>
      {% endif %}
    {% endif %}
  </ul>

  {% liquid
    assign has_metafield_1 = false
    assign has_metafield_2 = false
    assign has_metafield_3 = false
    assign has_metafield_4 = false
    assign has_metafield_5 = false

    if block.settings.metafield_1_namespace != blank and block.settings.metafield_1_key != blank
      assign metafield_1_check = product.metafields[block.settings.metafield_1_namespace][block.settings.metafield_1_key]
      if metafield_1_check != blank
        assign has_metafield_1 = true
      endif
    endif

    if block.settings.metafield_2_namespace != blank and block.settings.metafield_2_key != blank
      assign metafield_2_check = product.metafields[block.settings.metafield_2_namespace][block.settings.metafield_2_key]
      if metafield_2_check != blank
        assign has_metafield_2 = true
      endif
    endif

    if block.settings.metafield_3_namespace != blank and block.settings.metafield_3_key != blank
      assign metafield_3_check = product.metafields[block.settings.metafield_3_namespace][block.settings.metafield_3_key]
      if metafield_3_check != blank
        assign has_metafield_3 = true
      endif
    endif

    if block.settings.metafield_4_namespace != blank and block.settings.metafield_4_key != blank
      assign metafield_4_check = product.metafields[block.settings.metafield_4_namespace][block.settings.metafield_4_key]
      if metafield_4_check != blank
        assign has_metafield_4 = true
      endif
    endif

    if block.settings.metafield_5_namespace != blank and block.settings.metafield_5_key != blank
      assign metafield_5_check = product.metafields[block.settings.metafield_5_namespace][block.settings.metafield_5_key]
      if metafield_5_check != blank
        assign has_metafield_5 = true
      endif
    endif
  %}

  {% unless has_metafield_1 or has_metafield_2 or has_metafield_3 or has_metafield_4 or has_metafield_5 %}
    <div class="ai-metafield-display__empty-{{ ai_gen_id }}">
      Configure metafield namespaces and keys in the block settings
    </div>
  {% endunless %}
</div>

